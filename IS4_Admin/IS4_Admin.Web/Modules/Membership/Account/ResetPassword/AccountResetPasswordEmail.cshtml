@model IS4_Admin.Membership.ResetPasswordEmailModel

<html>
<head>
    <title>Reset your IS4_Admin password</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to change your password on IS4_Admin.</p>

    <p>Click the link below to set a new password:</p>

    <p><a href="@Model.ResetLink">@Model.ResetLink</a></p>

    <p>If you don't want to change your password, you can ignore this email.</p>

    Thanks,
    The "IS4_Admin" Team
</body>
</html>